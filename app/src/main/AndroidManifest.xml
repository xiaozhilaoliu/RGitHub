<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.renyuzhuo.rgithub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RGitHubApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RGitHubMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.OtherUserInfoActivity" />
        <activity android:name=".activity.OtherUsersActivity" />
        <activity android:name=".activity.RepoActivity" />
        <activity android:name=".activity.RepoDetailActivity" />
        <activity android:name=".activity.EventActivity" />
        <activity android:name=".activity.RepoOtherUsersActivity" />
        <activity android:name=".activity.SettingActivity"></activity>
    </application>

</manifest>