<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/repo_state_detail_style">

            <ImageView
                style="@style/repo_state_detail_img_style"
                android:background="@drawable/lock" />

            <TextView
                android:id="@+id/lock"
                style="@style/repo_state_detail_text_style"
                android:text="@string/app_name" />
        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout style="@style/repo_state_detail_style">

            <ImageView
                style="@style/repo_state_detail_img_style"
                android:background="@drawable/language" />

            <TextView
                android:id="@+id/language"
                style="@style/repo_state_detail_text_style"
                android:text="@string/app_name" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/repo_state_detail_style">

            <ImageView
                style="@style/repo_state_detail_img_style"
                android:background="@drawable/warn" />

            <TextView
                android:id="@+id/issues"
                style="@style/repo_state_detail_text_style"
                android:text="@string/app_name" />
        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout style="@style/repo_state_detail_style">

            <ImageView
                style="@style/repo_state_detail_img_style"
                android:background="@drawable/branch" />

            <TextView
                android:id="@+id/branch"
                style="@style/repo_state_detail_text_style"
                android:text="@string/app_name" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/repo_state_detail_style">

            <ImageView
                style="@style/repo_state_detail_img_style"
                android:background="@drawable/calendar" />

            <TextView
                android:id="@+id/calendar"
                style="@style/repo_state_detail_text_style"
                android:text="@string/app_name" />
        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout style="@style/repo_state_detail_style">

            <ImageView
                style="@style/repo_state_detail_img_style"
                android:background="@drawable/tool" />

            <TextView
                android:id="@+id/tool"
                style="@style/repo_state_detail_text_style"
                android:text="@string/app_name" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/horizontal_line" />

    <LinearLayout
        android:id="@+id/owner_linerar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout style="@style/repo_state_detail_relative_style">


            <ImageView
                android:id="@+id/lay1"
                style="@style/repo_state_detail_img_style"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/people" />

            <TextView
                style="@style/repo_state_detail_text_style"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/lay1"
                android:text="@string/owner" />

            <ImageView
                android:id="@+id/lay2"
                style="@style/repo_state_detail_img_forward_style"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/forward" />

            <TextView
                android:id="@+id/owner_name"
                style="@style/repo_state_detail_text_style"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/lay2"
                android:paddingRight="5dp"
                android:text="@string/app_name" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>